<h1>Publicaciones</h1>


<% @publications.each do |publication| %>
  
    <% @users.each do |user| %>
     <% if publication.user_id == user.id %>

      
      <br>
      

      <h3><b>
      <%= publication.title %></b></h3>
      <br>
      <%= image_tag publication.image.url(:medium) %>
      <br>
      <div id="publicacion">
        <br>
        <p><%= publication.description %></p>
        <p>Escrito por <%= user.alias %> el <%= publication.created_at %></p>
        <% if publication.user_id == current_user.id %>
          <%= link_to 'Editar', edit_publication_path(publication) %>
        <% end  %>
      </div>
      
      <h3>Comentarios</h3>
      <div id="comentario">
        <% @comments.each do |comment| %>
          <% if comment.publication_id == publication.id %>

            <p> 
            <%= comment.content %></p>
            
            <p>Escrito por <%= user.alias %> el <%= comment.created_at %></p>
            <br>
            <hr>
          <% end %>
        <% end %>
      </div>
      <%= link_to 'Comentar', new_comment_path  %>

    <% end %>
  <% end %>

<% end %>


<br/>
<br>
<hr>

