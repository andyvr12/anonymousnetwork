<h2 class="titulolistado"><u>Listado de Usuarios</u></h2>
<table class="table table-hover">
  <tr>
    <th>Alias</th>
    <th>Email</th>
    <th>Score</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.alias %></td>
    <td><%= user.email %></td>
    <td><%= user.score %></td>
    
    <td><%= link_to icon('edit')+'Editar', edit_user_registration_path(user), class:'btn-small btn-warning' %></td>
    <td><%= link_to icon('remove')+'Eliminar', user, method: :delete, data: { confirm: 'Usted esta seguro de Eliminar dicho Cliente?' }, class:'btn-small btn-danger'  %></td>
      <td><%= link_to 'Ver', user, class:'btn-small btn-success' %></td>

  </tr>
<% end %>
</table>

